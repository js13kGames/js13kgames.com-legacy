{{!< main }}

<div class="row">
  <div class="admin login columns col-xs-12">
    <h3>js13kGames Admin Panel</h3>
    <div class="row">
      <div class="columns col-xs-4"></div>
      <div class="columns col-xs-4 panel">
        <form action="/admin/login" method="post" class="login wrap form-horizontal">
          <input type="hidden" name="csrf" value="{{csrfToken}}" />
          <div class="form-group">
            <label for="email" class="col-sm-3 control-label">Email:</label>
            <div class="col-sm-9">
              <input type="text" class="form-control" name="email" id="email" placeholder="e.g. mail@example.com" pattern="^([a-zA-Z0-9_\-\.]+)@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([a-zA-Z0-9\-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$"/>
            </div>
          </div>
          <div class="form-group">
            <label for="password" class="col-sm-3 control-label">Password:</label>
            <div class="col-sm-9">
              <input type="password" class="form-control" name="password" id="password" placeholder="Password" />
            </div>
          </div>
          <button type="submit" class="button btn btn-primary">Log In</button>
        </form>
      </div>
      <div class="columns col-xs-4"></div>
    </div>
</div>
</div>
